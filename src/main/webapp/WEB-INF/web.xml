<?xml version=
        "1.0"
        encoding=
        "UTF-8"
        ?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID"
         version="3.0">

    <context-param>
        <param-name>fileName</param-name>
        <param-value>file\file.txt</param-value>
    </context-param>
    <context-param>
        <param-name>cloneName</param-name>
        <param-value>temp\clone.txt</param-value>
    </context-param>
    <display-name>ChatCot</display-name>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <servlet>
        <display-name>MainServletDisplay</display-name>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>LoginServletDisplay</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>RegisterServletDisplay</display-name>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>LogoutServletDisplay</display-name>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>SignUpServletDisplay</display-name>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>AdminServletDisplay</display-name>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>DeleteServletDisplay</display-name>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>EditServletDisplay</display-name>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.EditServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>EditPerformServletDisplay</display-name>
        <servlet-name>EditPerformServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.EditPerformServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>AddPerformServletDisplay</display-name>
        <servlet-name>AddPerformServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.AddPerformServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>GetTasksServletDisplay</display-name>
        <servlet-name>GetTasksServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.GetTasksServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>GetPhraseServletDisplay</display-name>
        <servlet-name>GetPhraseServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.GetPhrasesServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>DeleteTasksServletDisplay</display-name>
        <servlet-name>DeleteTasksServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.DeleteTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>EditTaskServletDisplay</display-name>
        <servlet-name>EditTaskServlet</servlet-name>
        <servlet-class>by.cascade.chatcot.connector.EditTaskServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/pages/reg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPerformServlet</servlet-name>
        <url-pattern>/editPerform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPerformServlet</servlet-name>
        <url-pattern>/addPerform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTasksServlet</servlet-name>
        <url-pattern>/getTasks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPhraseServlet</servlet-name>
        <url-pattern>/getPhrases</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditTaskServlet</servlet-name>
        <url-pattern>/editTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTasksServlet</servlet-name>
        <url-pattern>/deleteTask</url-pattern>
    </servlet-mapping>



    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
